{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Agent Extension Manifest (AEM) v0 (scaffold)",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "schema",
    "id",
    "type",
    "version",
    "permissions"
  ],
  "properties": {
    "schema": {
      "type": "string",
      "const": "aessf.dev/aem/v0"
    },
    "id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": [
        "skill",
        "mcp-server",
        "plugin"
      ]
    },
    "version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+(?:[-+][0-9A-Za-z.-]+)?$"
    },
    "source_repo": {
      "type": "string"
    },
    "source_rev": {
      "type": "string"
    },
    "permissions": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "files": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "read": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "write": {
              "type": "array",
              "items": {
                "type": "string"
              }
            }
          }
        },
        "network": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "domains": {
              "type": "array",
              "items": {
                "type": "string"
              }
            },
            "allow_ip_literals": {
              "type": "boolean"
            }
          }
        },
        "process": {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "allow_shell": {
              "type": "boolean"
            },
            "allow_subprocess": {
              "type": "boolean"
            }
          }
        }
      }
    }
  }
}
